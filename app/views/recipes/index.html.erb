<div class="container">
  <div class="row">

    <div class="col-2">
      <div class="sidebar_content">
        <%= render 'layouts/genre_search', genres: @genres %>
      </div>
    </div>
  
      <div class ="col-10">
        <span class="str">
          <h3>レシピ一覧</h3>
        </span>
          <div class="row">
            <% @search_recipes.each do |recipe| %>
            <div class="col-md-4">
              <div class="card">
              <%= link_to recipe_path(recipe) do %>
              <%= attachment_image_tag recipe, :recipe_image, :size =>'250x200' %>
              <% end %>
              
              <div class="card-body">
                <h5 class="card-title">
                  <%= recipe.name %>
                </h5>
                <p class="card-text">
                  <%= recipe.introduction %><br>
                  <%= attachment_image_tag recipe.user, :profile_image, fallback: "no-image.png", :size =>'40x40' %>
                  <%= recipe.user.name %><br>
                  <%= recipe.updated_at.strftime("%Y-%m-%d") %>
                </p>
              </div>
            </div>
          </div>
              <% end %>
        </div>
         <%= paginate @search_recipes %>
      </div>
    </div>
  </div>