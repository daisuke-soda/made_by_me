<div class="container">
  <div class="row">
    <div class="col-2">
      <div class="sidebar_content">
        <%= render 'layouts/genre_search', genres: @genres %>
      </div>
    </div>
  
      <div class ="col-10">
        <h3>レシピ一覧</h3>
          <div class="row">

        
            <% @search_recipes.each do |recipe| %>

            <%= link_to recipe_path(recipe) do %>
            <%= attachment_image_tag recipe, :recipe_image, :size =>'200x200' %>
            <% end %>
            <%= attachment_image_tag recipe.user, :profile_image, fallback: "no-image.png", :size =>'100x100' %>


            <%= recipe.user.name %>
            <%= recipe.name %>

            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>