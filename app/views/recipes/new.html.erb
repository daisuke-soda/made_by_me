<h1>レシピ投稿</h1>
<%= form_for @recipe do |f| %>

  <%= f.label :"レシピタイトル" %>
  <%= f.text_field :name %>

  <%= f.label :"トップ画像" %>
  <%= f.attachment_field :recipe_image %>

  <%= f.label :"レシピの説明" %>
  <%= f.text_area :introduction %>

  <%= f.label :"かかった費用" %>
  <%= f.text_field :cost %>

  <%= f.label :"所要時間" %>
  <%= f.text_field :time %>

  <%= f.label :"材料・工具" %>
  <%= f.text_field :material %>

  <%= f.submit %>

<% end %>