<div class="container">
  <div class="mx-auto" style="width: 200px;">
    <span class="str">
      <h3>ユーザー編集</h3>
    </span>

　　  <%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :"名前" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :"メールアドレス" %>
      <%= f.text_field :email %>
    </div>

    <div class="form-group">
      <%= f.label :"プロフィール画像" %>
      <%= f.attachment_field :profile_image %>
    </div>

      <%= f.submit "更新", class: "btn btn-primary btn-md" %><br><br>
      <%= link_to("退会する",user_path(current_user.id),{class: "destroy-user",method: :delete, data: {confirm: "本当に退会しますか？"}}) %>
　　　<% end %>
  </div>
</div>