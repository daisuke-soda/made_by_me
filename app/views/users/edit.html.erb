<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

  <%= form_for @user do |f| %>

  <%= f.label :"名前" %>
  <%= f.text_field :name %>

  <%= f.label :"メールアドレス" %>
  <%= f.text_field :email %>

  <%= f.label :"プロフィール画像" %>
  <%= f.attachment_field :profile_image %>

  <%= f.submit "更新", class: "btn btn-success" %>

<% end %>
