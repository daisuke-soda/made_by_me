<div class="container">
  <div class="row">
      <div class="mx-auto" style="width: 200px;">
        <span class="str">
          <h3>マイページ</h3>
        </span>
      </div>

    <div class="col-12">
        <table class="table table-condensed">

          <thead>
            <tr>
              <th>ユーザー情報</th>
            </tr>
          </thead>
          
          <tbody>
              <tr>
                <td>
                <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", :size =>'100x100' %>
                <%= @user.name %>
                <%= link_to("編集する", edit_user_path(@user),{class: "btn btn-primary btn-sm"}) %>
                </td>
              </tr>

              <tr><td>投稿済みレシピ<br>
                <div class="row">
                  <% @recipes.each do |recipe| %>
                  <div class="col-md-4">

                    <%= link_to recipe_path(recipe) do %>
                    <%= attachment_image_tag recipe, :recipe_image, :size =>'200x200' %><br>
                    <% end %>

                    レシピ名：<%= recipe.name %><br>
                    作成日：<%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %><br>
              
                  </div>
                  <% end %>
                </div>
              </td></tr>
          </tbody>
        </table>
        <%= paginate @recipes %>
    </div>
  </div>
</div>