<div class="container">
  <div class="row">
      <div class="mx-auto" style="width: 200px;">
        <span class="str">
          <h3>マイページ</h3>
        </span>
      </div>


      <div class="table-responsive">
        <table class="table table-condensed">

          <thead>
            <tr>
              <th>ユーザー情報</th>
            </tr>
          </thead>
          <tbody>
            <div class="row">
              <tr><td>
                <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", :size =>'100x100' %>
                <%= @user.name %>
                <%= link_to "編集する", edit_user_path(@user) %>
              </td></tr>

              <tr><td>投稿済みレシピ<br>
                <div class="col-xs-4">
                <% @recipes.each do |recipe| %>

                  <%= link_to recipe_path(recipe) do %>
                  <%= attachment_image_tag recipe, :recipe_image, :size =>'200x200' %><br>
                  <% end %>

                  レシピ名：<%= recipe.name %><br>
                  作成日：<%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %><br>
            
              
                  <% end %>

                </div>
              </td></tr>
            </div> 
          </tbody>
        </table>
      </div>
  </div>
</div>