<div class="container">
  <div class="row">
    <h2>お気に入り一覧</h2>
  </div>
        
        <% @favorites.each do |favorite| %>

          <%= link_to recipe_path(favorite.recipe.id) do %>
          <%= attachment_image_tag favorite.recipe, :recipe_image, :size =>'200x200' %>
          <% end %>
          <%= attachment_image_tag favorite.recipe.user, :profile_image, fallback: "no-image.png", :size =>'100x100' %>
          <%= favorite.recipe.user.name %>
          <%= favorite.recipe.name %>

　　    <% end %>



</div>
