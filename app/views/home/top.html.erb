<div class="container">
  <div class="row">

    <div class="col-2">
      <div class="sidebar_content">
        <%= render 'layouts/genre_search', genres: @genres %>
     </div>
    </div>

    <div class="col-10">
      <span class="str">
        <i class="far fa-bell"> 新着レシピ</i>
      </span>
      <div class="row">
          <% @recipes.each do |recipe| %>
          <div class="col-md-4">
          <div class="card" style="width: 200px;">
            <%= link_to recipe_path(recipe) do %>
            <%= attachment_image_tag recipe, :recipe_image,:size =>'200x200'  %>
            <% end %>

            
            <div class="card-body">
              <h5 class="card-title">
                <%= recipe.name %>
              </h5>
              <p class="card-text">
                <%= recipe.introduction %><br>
                <%= attachment_image_tag recipe.user, :profile_image, fallback: "no-image.png", :size =>'50x50' %>
                <%= recipe.user.name %>
              </p>
            </div>
          </div>
        </div>
            <% end %>

      </div>
    </div>
  </div>
</div>
